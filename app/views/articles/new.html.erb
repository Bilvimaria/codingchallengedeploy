<p><%= link_to 'back to Articles List', articles_path %></p>


<%= form_for @article do |f| %>
    <div>
      <%= f.label :title %>
      <%= f.text_field :title %>
    </div>
    
    <div>
      <%= f.label :body %>
      <%= f.text_area :body %>
    </div>
  
    <div>
    <%= f.label :user_id %>
    <%= f.select :user_id, options_from_collection_for_select(User.all, :id, :name) %>
    <%= link_to "create a new user", new_user_path %>
    </div>

    <div><%= f.submit %></div>
  <% end %>